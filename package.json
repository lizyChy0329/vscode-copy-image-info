{
  "publisher": "lizyChy0329",
  "name": "copy-image-size",
  "displayName": "Copy Image Size",
  "type": "module",
  "version": "0.1.1",
  "private": false,
  "packageManager": "pnpm@9.8.0",
  "description": "Copy Image Size for Tailwind or Unocss or CSS",
  "author": {
    "name": "lizyChy0329",
    "url": "https://github.com/lizyChy0329"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/lizyChy0329/vscode-copy-image-size"
  },
  "categories": [
    "Snippets",
    "Debuggers",
    "Testing",
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "icon": "./icon.png",
  "tags": [
    "copy",
    "clipboard",
    "size",
    "image",
    "image size",
    "unocss",
    "tailwind",
    "tailwindcss"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pinecone",
          "title": "PineCone",
          "icon": "media/ion--images.svg"
        }
      ]
    },
    "views": {
      "pinecone": [
        {
          "id": "pinecone",
          "name": "",
          "type": "webview",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "copy-image-size.openPineCone",
        "title": "Open PineCone"
      },
      {
        "command": "copy-image-size.copyImageSizeToTailwind",
        "title": "Copy Image Size to Tailwindcss"
      },
      {
        "command": "copy-image-size.copyImageSizeToCss",
        "title": "Copy Image Size to CSS"
      },
      {
        "command": "copy-image-size.copyImageFullname",
        "title": "Copy Image Fullname"
      },
      {
        "command": "copy-image-size.copyImageExt",
        "title": "Copy Image Ext"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copy-image-size.openPineCone",
          "group": "open-pinecone@01",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "copy-image-size.copyImageSizeToTailwind",
          "when": "resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .png || resourceExtname == .gif || resourceExtname == .bmp || resourceExtname == .svg || resourceExtname == .webp || resourceExtname == .tiff",
          "group": "copy-image-size@01"
        },
        {
          "command": "copy-image-size.copyImageSizeToCss",
          "when": "resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .png || resourceExtname == .gif || resourceExtname == .bmp || resourceExtname == .svg || resourceExtname == .webp || resourceExtname == .tiff",
          "group": "copy-image-size@02"
        },
        {
          "command": "copy-image-size.copyImageFullname",
          "when": "resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .png || resourceExtname == .gif || resourceExtname == .bmp || resourceExtname == .svg || resourceExtname == .webp || resourceExtname == .tiff",
          "group": "copy-image-size@10"
        },
        {
          "command": "copy-image-size.copyImageExt",
          "when": "resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .png || resourceExtname == .gif || resourceExtname == .bmp || resourceExtname == .svg || resourceExtname == .webp || resourceExtname == .tiff",
          "group": "copy-image-size@20"
        }
      ],
      "webview/context": [
        {
          "command": "copy-image-size.copyImageSizeToTailwind",
          "when": "webviewId == 'pinecone' && webviewSection == 'imgItem'",
          "group": "1_copy@1"
        },
        {
          "command": "copy-image-size.copyImageSizeToCss",
          "when": "webviewId == 'pinecone' && webviewSection == 'imgItem'",
          "group": "1_copy@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup --env.NODE_ENV production --treeshake",
    "dev": "tsup --watch ./src --env.NODE_ENV development",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "release": "bumpp",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@types/node": "^18.19.45",
    "@types/vscode": "^1.82.0",
    "await-to-js": "^3.0.0",
    "bumpp": "^9.6.1",
    "clipboardy": "^4.0.0",
    "eslint-plugin-format": "^0.1.2",
    "image-size": "^1.1.1",
    "jest-mock-vscode": "^4.0.2",
    "lint-staged": "^15.2.10",
    "reactive-vscode": "^0.2.5",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "vscode-uri": "^3.0.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}